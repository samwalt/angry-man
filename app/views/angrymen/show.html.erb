<p id="notice"><%= notice %></p>

<p>
  <strong>Nick:</strong>
  <%= @angryman.nick %>
  <% if @angryman.systems.size > 0 %>
  	<table>
  		<thead>
		    <tr>
		      <th>Name</th>
		      <th>Type</th>
		      <th>Description</th>
		    </tr>
		</thead>
		<tbody>
	  		<% @angryman.systems.each do |system| %>
	  		<tr><%= system.name %></tr>
	  		<tr><%= system.type %></tr>
	  		<tr><%= system.description %></tr>
	  		<% end %>
	  	</tbody>
  	</table>
  <% else %>
  	<p><%= link_to 'Create system', new_angryman_system_path(@angryman) %></p>
  <% end %>
</p>

<%= link_to 'Edit', edit_angryman_path(@angryman) %> |
<%= link_to 'Back', angrymen_path %>
