<h1>Listing systems</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Type</th>
      <th>Description</th>
      <th>Angryman</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @systems.each do |system| %>
      <tr>
        <td><%= system.name %></td>
        <td><%= system.type %></td>
        <td><%= system.description %></td>
        <td><%= system.angryman %></td>
        <td><%= link_to 'Show', angryman_system_path( system.angryman , system) %></td>
        <td><%= link_to 'Edit', edit_angryman_system_path(system.angryman, system) %></td>
        <td><%= link_to 'Destroy', angryman_systems_path( system.angryman, system ), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

